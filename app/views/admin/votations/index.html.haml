= content_for :user_details do
  = render partial: 'shared/user_details'
= content_for :actions do
  = render partial: 'shared/actions'
.admin-list
  %header
    %h1 MVP section (current votations for #{ Date.today.strftime('%B %Y') })
    = link_to 'create a new MVP votation', new_admin_votation_path, class: 'mvp'
  %table.table
    %tbody
      %tr
        %th Badge
        %th Manage module
    %tbody
      - @votations.each do |votation|
        %tr
          %td= votation.badge.name
          %td
            = link_to 'Delete', '#', class: 'action-control-section'
            |
            = link_to 'Check votations', '#', class: 'action-control-section'
