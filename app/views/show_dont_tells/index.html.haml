.row
  .col-md-12
    .span12.workshops
      %header.workshops-header-container
        %h3.workshop-header
          %span.workshop-header-image
          %span.workshops-title All Show don't tells
        %ul.workshops-menu
          %li.last
            = link_to 'Back to my Dashboard', user_path(current_user),
              class: 'workshops-last-link'
          .workshops-header-decorator
      %section
        .workshops-all
          = show_show_dont_tell(params[:active])
      %footer.workshops-footer-separator
        %p
          Total
          - if params[:active]
            = pluralize(@show_dont_tells.active.size, 'show don\'t tell')
          - else
            = pluralize(@show_dont_tells.size, 'show don\'t tell')              
        .workshops-footer-icon
