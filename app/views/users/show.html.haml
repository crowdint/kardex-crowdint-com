%aside#user-show
  .row.square-box
    .profile-picture
      = image_tag @user.picture_url
    .user-info
      %h3.name= @user.name
      %p.position= position
      %hr
      %h3.title Summary
      %p.summary-info= @user.bio
      %h3.title Skills
      %ul.nav
        - @user.skills.each do |skill|
          %li= skill.name
  .navi.account
    = link_to 'Back to users', users_path
    |
    = link_to 'Edit user', edit_user_path(@user)
    |
    = link_to 'Nominate a user', new_nominee_user_path
    |
    = link_to 'Nominate list', nominee_lists_path
    |
    = link_to 'Propose a badge', new_propose_badge_path
