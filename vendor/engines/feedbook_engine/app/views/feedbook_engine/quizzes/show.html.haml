.row
  .col-md-8
    %h2
      = @user_quiz.quiz.name
      Test
    %span
      = "Question #{@user_quiz.question_user_answers.count} of #{@user_quiz.questions.count}"
  .col-md-4
    %span Time remaining 01:14

.row
  .col-md-12
    %p
      = @user_question.question.name

